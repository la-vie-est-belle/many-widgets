{
    "name": "many-widgets",
    "package_version": 2,
    "version": "1.0.5",
    "description": "Here are many widgets for you. :)",
    "author": "la vie est belle",
    "main": "browser.js",

    "panels": {
        "default": {
            "title": "widgets panel",
            "type": "dockable",
            "main": "./panels/default/default.js",
            "icon": "./static/icons/default.png",
            "size": {
                "height": 680,
                "width": 400
            }
        },

        "settings": {
            "title": "settings panel",
            "main": "./panels/settings/settings.js",
            "icon": "./static/icons/default.png",
            "size": {
                "height": 235,
                "width": 400
            }
        }
    },

    "contributions": {
        "menu": [
            {
                "path": "i18n:menu.extension",
                "label": "Many Widgets",
                "icon": "./static/icons/default.png"
            },
            {
                "path": "i18n:menu.extension/Many Widgets",
                "label": "i18n:many-widgets.open",
                "message": "open-panel"
            }
        ],

        "messages": {
            "open-panel": {
                "methods": ["openPanel"]
            }
        },

        "shortcuts": [
            {
                "message": "open-panel",
                "win": "ctrl+w",
                "mac": "cmd+w"
            }
        ]
    }
}
